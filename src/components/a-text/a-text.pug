mixin a-text(data = {})
  if (data.size='small')
    p.a-text.a-text-small(class=data.class && data.class data-color=data.color && data.color data-has-margin-top=data.hasMarginTop && data.hasMarginTop)
      block
  else if (data.size='medium')
    p.a-text.a-text-medium(class=data.class && data.class data-color=data.color && data.color data-has-margin-top=data.hasMarginTop && data.hasMarginTop)
      block
  else if (data.size="large")
    p.a-text.a-text-large(class=data.class && data.class data-color=data.color && data.color data-has-margin-top=data.hasMarginTop && data.hasMarginTop)
      block

